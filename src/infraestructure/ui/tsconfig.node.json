{
  "compilerOptions": {
    "composite": true,
    "skipLibCheck": true,
    "module": "ESNext",
    "moduleResolution": "bundler",
    "allowSyntheticDefaultImports": true
  },
  "include": ["vite.config.ts"],
  "paths": {
    "@domain/*": [
        "../../../domain/*"
    ],
    "@infrastructure/*": [
        "../../../infrastructure/*"
    ],
    "@mocks/*": [
        "../../../mocks/*"
    ]
}
}
 